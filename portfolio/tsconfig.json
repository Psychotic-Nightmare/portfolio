{
	"include": [
		"src/**/*.{ts,tsx,js,jsx}",
		"src/**/.server/**/*",
		"src/**/.client/**/*",
		".react-router/types/**/*",
		"src/global.d.ts",
		"vite.config.ts",
		"tailwind.config.js"
	],
	"exclude": [
		"node_modules",
		"dist",
		".react-router"
	],
	"compilerOptions": {
		"lib": ["DOM", "DOM.Iterable", "ES2022"],
		"types": ["node", "vite/client"],
		"target": "ES2022",
		"module": "ES2022",
		"moduleResolution": "bundler",
		"jsx": "react-jsx",
		"rootDirs": [".", "./.react-router/types"],
		"baseUrl": ".",
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
